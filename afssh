set -e

declare -a agent_filter_args

while true; do
	if [[ $1 = "--" ]]; then
		shift
		break
	else
		agent_filter_args+=("$1")
		shift
	fi
done

eval $(${BASH_SOURCE%/*}/ssh-agent-filter "${agent_filter_args[@]}" || echo exit $?)
trap 'kill "$SSH_AGENT_PID"' EXIT

ssh -A "$@"
